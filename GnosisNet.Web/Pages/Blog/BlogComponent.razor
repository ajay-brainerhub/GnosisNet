@page "/";
@using GnosisNet.Web.IServices
@inject IBlogService _blogService


@if (blogs == null || blogs.Count == 0)
{
    <div class="spinner-border"></div>
}
else
{
    @foreach (var blog in blogs)
    {
        <div class="row">
            <div class="card">
                <div class="card-header">
                    <b>@blog.Title</b>
                </div>
                <div class="card-subtitle">
                    <small>Published On: @blog.PublishedDate</small>
                    <small>Published By: @blog.PublishedBy</small>
                </div>
                <div class="card-body">@((MarkupString)blog.PostBody)</div>
                <a></a>
                <div class="card-footer">
                    <a href="javascript:void(0);" @onclick="() => NavigateToFullPost(blog.Id)">Read more</a>
                </div>
            </div>
        </div>
        <br/> <br />
    }
}
